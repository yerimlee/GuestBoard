<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<bean id="dataSource" class="org.springframework.jdbc.datasource.SimpleDriverDataSource">
                 <property name="driverClass" value="com.mysql.jdbc.Driver" />
                 <property name="url" value="jdbc:mysql://localhost/springbook" />
                 <property name="username" value="root" />
                 <property name="password" value="aarain36" /> 
</bean>  
<bean id="userDao" class="spring.user.dao.UserDao">
                <property name="dataSource" ref="dataSource"></property>
</bean>

<bean id="gradeDao" class="spring.user.dao.GradeDao">
                <property name="dataSource" ref="dataSource"></property>
</bean>

<bean id="gradeProcess" class="springbook.user.process.GradeProcess">
                <property name="gradeDao" ref="gradeDao"></property>
</bean>
   
</beans>
